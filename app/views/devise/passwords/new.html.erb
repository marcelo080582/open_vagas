<h1 class="h3 mb-3 font-weight-normal title" style="text-align: center"> Esqueceu sua senha?</h1>
<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email,
                required: true,
                label: false,
                autofocus: true,
                placeholder: "E-mail",
                input_html: { autocomplete: "email" } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Enviar as instruções", class: 'btn btn-primary btn-block' %>
  </div>
  <hr>
  <%= render "devise/shared/links" %>
<% end %>

