<h1 class="h3 mb-3 font-weight-normal title" style="text-align: center"> Trocar senha</h1>
<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>

  <%= f.input :reset_password_token, as: :hidden %>
  <%= f.full_error :reset_password_token %>

  <div class="form-inputs">
    <%= f.input :password,
                label: false,
                required: true,
                autofocus: true,
                placeholder: 'Nova Senha',
                hint: ("MÃ­nimo #{@minimum_password_length} caracteres" if @minimum_password_length),
                input_html: { autocomplete: "new-password" } %>
    <%= f.input :password_confirmation,
                label: false,
                required: true,
                placeholder: 'Confirme a nova senha',
                input_html: { autocomplete: "new-password" } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Alterar senha", class: 'btn btn-primary btn-block' %>
  </div>
  <hr>
  <%= render "devise/shared/links" %>
<% end %>

